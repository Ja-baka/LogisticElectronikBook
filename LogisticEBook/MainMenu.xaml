<Window x:Class="LogisticEBook.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticEBook"
        mc:Ignorable="d"
        Title="Выбор темы" 
		Height="450" 
		Width="800"
		WindowStartupLocation="CenterScreen" Closed="Window_Closed"
>
	<Grid
		Background="AliceBlue"
	>
		<FlowDocumentScrollViewer 
			IsSelectionEnabled="False"
		>
			<FlowDocument
				FontFamily="Arial"
			>
				<FlowDocument.Resources>
					<Style
						TargetType
							="{x:Type Paragraph}"
					>
						<Setter 
							Property="Margin" 
							Value="0"
						/>
						<Setter
							Property="TextIndent"
							Value="20"
						/>
					</Style>
					<Style
						TargetType="Hyperlink"
					>
						<EventSetter
							Event="Click"
							Handler="Hyperlink_Click"
						/>
					</Style>
				</FlowDocument.Resources>

				<Paragraph
					TextIndent="0"
					FontWeight="Bold"
				>
					Раздел 1. Оборудование, сооружения и устройства для хранения грузов
				</Paragraph>
				
				<Paragraph>
					<Hyperlink
						Name="Hyperlink0"
					>
						Введние
					</Hyperlink>
				</Paragraph>

				<Paragraph>
					<Hyperlink
						Name="Hyperlink1_1"
					>
						1.1 Грузы и устройства для их храниения. Общее понятие и классификация
					</Hyperlink>
				</Paragraph>
				<Paragraph>
					<Hyperlink
						Name="Hyperlink1_2"
					>
						1.2 Грузовая единица
					</Hyperlink>
				</Paragraph>
			</FlowDocument>
		</FlowDocumentScrollViewer>
		
	</Grid>
</Window>
